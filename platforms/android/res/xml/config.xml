<?xml version='1.0' encoding='utf-8'?>
<widget id="com.vendfit.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Toast">
        <param name="android-package" value="nl.xservices.plugins.Toast" />
    </feature>
    <feature name="SQLitePlugin">
        <param name="android-package" value="io.liteglue.SQLitePlugin" />
    </feature>
    <feature name="Cache">
        <param name="android-package" value="org.apache.cordova.plugin.cache.Cache" />
    </feature>
    <allow-intent href="market:*" />
    <name>VendFit</name>
    <description>
        An application that communicates with the VendFit server and Fitbit API's to allow a user to purchase items from a vending machine using their Fitbit steps.
    </description>
    <author email="allenc4@wit.edu">
        Chris Allen, Tyler Gauch
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
