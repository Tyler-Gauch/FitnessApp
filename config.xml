<?xml version='1.0' encoding='utf-8'?>
<widget id="com.vendfit.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>VendFit</name>
    <description>
        An application that communicates with the VendFit server and Fitbit API's to allow a user to purchase items from a vending machine using their Fitbit steps.
    </description>
    <author email="allenc4@wit.edu">
        Chris Allen, Tyler Gauch
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

</widget>
